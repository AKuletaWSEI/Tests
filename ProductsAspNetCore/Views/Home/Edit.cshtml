@model ProductsAspNetCore.Models.Product

@{
    ViewData["Title"]="Edycja produktu";
}

<h2>Edycja produktu</h2>

<form asp-controller="Home" asp-action="Edit" method="POST" class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-sm-2" for="Name">Nazwa:</label> 
        <div class="col-sm-10">
            <input asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="EAN">Kategoria:</label> 
        <div class="col-sm-10">
            <input asp-for="Category" />
        </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="Price">Cena jednostkowa:</label> 
        <div class="col-sm-10">
            <input asp-for="Price" />
        </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="Unit">Ilość:</label> 
        <div class="col-sm-10">
            <input asp-for="Quantity" />
        </div>
    </div>

    <div class="form-group">
    <label class="control-label col-sm-2" for="Availability">Przypisane do:</label> 
        <div class="col-sm-10">
            <input asp-for="AssigntTo" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
               <input type="submit" class="btn btn-primary" value="Aktualizuj produkt" />
        </div>
    </div>

</form>

